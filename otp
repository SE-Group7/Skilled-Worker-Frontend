
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>OTP Input Example</title>
    <script>
      function handleInput(event) {
        const input = event.target;
        const nextInput = input.nextElementSibling;

        // If the input has a value and there's a next input field, focus on it
        if (input.value && nextInput) {
          nextInput.focus();
        }

        // If the input doesn't have a value and there's a previous input field, focus on it
        if (!input.value && input.previousElementSibling) {
          input.previousElementSibling.focus();
        }
      }
    </script>
    <style>
      /* Hide the inputs by default */
      input[type="text"] {
        width: 0;
        height: 0;
        border: none;
        padding: 0;
        margin: 0;
        font-size: 0;
      }

      /* Style the display element (e.g. the boxes) */
      .otp-input {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 4rem;
        height: 4rem;
        border: 2px solid gray;
        border-radius: 5px;
        margin: 0.5rem;
        font-size: 2rem;
      }
    </style>
  </head>
  <body>
    <form>
      <div>
        <input type="text" id="otp-1" maxlength="1" oninput="handleInput(event)" />
        <div class="otp-input" tabindex="0"></div>
        <input type="text" id="otp-2" maxlength="1" oninput="handleInput(event)" />
        <div class="otp-input" tabindex="0"></div>
        <input type="text" id="otp-3" maxlength="1" oninput="handleInput(event)" />
        <div class="otp-input" tabindex="0"></div>
        <input type="text" id="otp-4" maxlength="1" oninput="handleInput(event)" />
        <div class="otp-input" tabindex="0"></div>
      </div>
    </form>
  </body>
</html>
